from fabric.api import task
from fabric.state import env
from fabric.operations import sudo, local
from fabric.context_managers import cd

@task
def localhost():
    env.hosts = ['localhost']
    env.password = '<%= @password %>'
    env.user = '<%= @user %>'
    env.run = local

@task
def deploy():
    cd('<%= @home %>')
    sudo('chef-solo -c implantacao/solo.rb')
